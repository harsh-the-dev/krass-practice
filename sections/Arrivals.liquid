<section class="NewArrivals">
  <div class="container">
    <div class="NewArrivals-container-wrapper">
      <div class="row resposnvives">
        <div class="col-6  fixed">
          <img src="{{ section.settings.image| img_url:'master' }}">
          <h2>{{ section.settings.paragraph1 }}</h2>
          <p>{{ section.settings.paragraph2 }}</p>
          <button>{{ section.settings.paragraph3 }}</button>
        </div>
        <div class="col-6  fixed-section">
          {% for block in section.blocks %}
            <div class="Arrival-card col-3">
              <div class="arri">
                <img src="{{ block.settings.Arrivalimage  | img_url: 'medium'}}" alt="">

                <p class="arrival-card-title">{{ block.settings.Arriavalheading }}</p>
                <p class="price">{{ block.settings.Arrivaltext }}</p>
              </div>
              <div class="Add-to-cart">
                <p class="arrival-c"><a href="{{section.settings.link}}">ADD TO CART</a></p>
                <p class="arrival-s"><a href="{{section.settings.linkcart}}">QUICK SHOP</a></p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "NewArrivals",
  "blocks": [
    {
      "name": "block",
      "type": "image_picker",
      "settings": [
        {
          "type": "image_picker",
          "id": "Arrivalimage",
          "label": "add your image here"
        }, {
          "type": "text",
          "id": "Arriavalheading",
          "label": "add your heading here"
        }, {
          "type": "text",
          "id": "Arrivaltext",
          "label": "add para here"
        }
      ]
    }
  ],
  "settings": [
    {
    "type":"image_picker",
    "id":"image",
    "label":"Enter the image"
    },
    {
    "type":"text",
    "id":"paragraph1",
    "label":"Enter the text"
    },
      {
    "type":"text",
    "id":"paragraph2",
    "label":"Enter the text"
    },
     {
    "type":"text",
    "id":"paragraph3",
    "label":"Enter the text"
    },
    {
      "type": "url",
      "id":"link",
      "label":"add your link here"
    },
    {
      "type": "url",
      "id":"linkcart",
      "label":"add your link here"
    }

  ],

  "presets": [
    {
      "name": "NewArrivals",
      "category": "index"
    }
  ]
}
{% endschema %}

{% stylesheet %}
          section.NewArrivals
          {
            background: #F3F3F3;
                padding: 50px;
        }
          .arrivals {
            display: flex;
        }

          .col-6.fixed {
            text-align: center;
        }
            .col-6.fixed  img {
        max-width:502px;
              width:100%;
            }
        .arri
