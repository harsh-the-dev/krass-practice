<section class="shop-best-seller">
  <div class="container-fluid">
    <h2 class="shop-2" style="text-align:center;">{{ section.settings['shop-txt'] }}</h2>
    <div class="collection-section">
      {% for product in collections[section.settings['collection-title']].products %}
        <div class="back-collection-img">
          <a href="{{ product.url }}"><img src="{{ product | img_url: 'master' }}"></a>
          <a class="back-collection-img-title" style="color:black; text-decoration:none;" href="{{ product.url }}">
            {{- product.title -}}
          </a>
          <p class="back-collection-pr">
            ${{ product.price -}}
            <span>{{ product.compare_at_price }}</span>
          </p>
          <div class="Add-to-cart">
            <p>ADD TO CART</p>
            <p>QUICK SHOP</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
 {
  "name": "shop-best-seller",
  "settings": [
    {
 "type":"text",
    "id":"shop-txt",
    "label":"Enter the text"
    },
    {
      "type":"collection",
      "id":"collection-title",
      "label":"Chose the collection"
    }

  ],
  "presets": [
    {
      "name": "shopbest-seller",
      "category": "shop"
    }
  ]
}
{% endschema %}
