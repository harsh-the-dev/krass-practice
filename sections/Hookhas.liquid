<section class="Hookhas">
  <div class="container">
    <div class="container-wrapper">
      <div class="image-wrapper">
        <img src="{{ section.settings.heading|img_url:'master' }}">
      </div>
      <div class="slider-wrapper">
        {% for product in collections[section.settings['collection-hookha-slider']].products %}
          <div class="slider-img-box">
            <a href="{{ product.url }}"><img src="{{ product | img_url: 'master' }}"></a>
            <a class="back-collection-img-title" style="color:black; text-decoration:none;" href="{{ product.url }}">
              {{- product.title -}}
            </a>
            <p class="back-collection-pr">{{ product.price }}</p>
            <div class="Add-to-cart">
              <p>ADD TO CART</p>
              <p>QUICK SHOP</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
   "name": "Hookha-collection",
   "settings": [
     {
     "type":"image_picker",
     "id":"heading",
     "label":"Chose the image"
     },
     {
     "type":"collection",
     "id":"collection-hookha-slider",
     "label":"Chose the collection"
     }
   ],

 "presets":[
   {
     "name":"Hoookha-collection",
     "category":"paragraph"
   }
 ]
 }
{% endschema %}

